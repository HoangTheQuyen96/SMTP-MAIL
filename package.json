{
  "name": "email-notification-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node src/app.js",
    "test": "./node_modules/.bin/jest --config=jest.config.js",
    "test:watch": "./node_modules/.bin/jest --watch --config=jest.config.js",
    "test:coverage": "./node_modules/.bin/jest --coverage --collectCoverageFrom=src/**/*.js",
    "precommit": "lint-staged",
    "dev": "./node_modules/.bin/nodemon --inspect=0.0.0.0:3000 src/app.js",
    "lint": "./node_modules/.bin/eslint src",
    "lintfix": "./node_modules/.bin/eslint src --fix",
    "format": "./node_modules/.bin/prettier --write './src/**/*.js'"
  },
  "author": "Hoang The Quyen (hoangthequyen01@gmail.com)",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "ignore": [
      "./**/*.md",
      "package-lock.json",
      "package.json",
      "src/**/*.spec.js",
      ".vscode/*.*",
      ".eslintrc.json"
    ],
    "linters": {
      "*.{js,jsx}": [
        "eslint --no-ignore --fix",
        "git add --force"
      ],
      "*.{json,md,graphql}": [
        "prettier --write",
        "git add --force"
      ]
    }
  },
  "dependencies": {
    "ajv": "^6.10.2",
    "amqplib": "^0.5.5",
    "body-parser": "^1.19.0",
    "config": "^3.2.2",
    "cors": "^2.8.5",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "express": "^4.17.1",
    "folktale": "^2.3.2",
    "generate-safe-id": "^1.0.2",
    "http-errors": "^1.7.3",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "js-yaml": "^3.13.1",
    "lint-staged": "^13.1.0",
    "moment": "^2.24.0",
    "mongodb": "^3.3.0-beta2",
    "nodemailer": "^6.3.0",
    "nodemailer-smtp-transport": "^2.7.4",
    "nodemon": "^1.19.1",
    "prettier": "^1.15.2"
  }
}
